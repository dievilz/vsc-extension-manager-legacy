{
  "name": "vscode-extension-manager",
  "displayName": "VS Code Extension Manager",
  "description": "Export and import VS Code extensions between different installations",
  "version": "0.0.4",
  "publisher": "ranjeeth-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/ranjeet-h/vsc-extension-manager"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:extensionManagerView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extension-manager",
          "title": "Extension Manager",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "extension-manager": [
        {
          "id": "extensionManagerView",
          "name": "Extensions",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "extensionManagerView",
        "contents": "No extensions loaded.\n[Load Extensions File](command:vscode-extension-manager.loadFile)\n\nOr export your current extensions:\n[Export Extensions](command:vscode-extension-manager.exportExtensions)"
      }
    ],
    "commands": [
      {
        "command": "vscode-extension-manager.exportExtensions",
        "title": "Export Extensions",
        "category": "Extension Manager"
      },
      {
        "command": "vscode-extension-manager.importExtensions",
        "title": "Import Extensions",
        "category": "Extension Manager"
      },
      {
        "command": "vscode-extension-manager.loadFile",
        "title": "Load Extensions File",
        "icon": "$(folder-opened)",
        "category": "Extension Manager"
      },
      {
        "command": "vscode-extension-manager.installSelected",
        "title": "Install Selected",
        "icon": "$(cloud-download)",
        "category": "Extension Manager"
      },
      {
        "command": "vscode-extension-manager.selectAll",
        "title": "Select All",
        "icon": "$(check-all)",
        "category": "Extension Manager"
      },
      {
        "command": "vscode-extension-manager.deselectAll",
        "title": "Deselect All",
        "icon": "$(close-all)",
        "category": "Extension Manager"
      },
      {
        "command": "vscode-extension-manager.showError",
        "title": "Show Error",
        "category": "Extension Manager"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-extension-manager.loadFile",
          "when": "view == extensionManagerView",
          "group": "navigation"
        },
        {
          "command": "vscode-extension-manager.installSelected",
          "when": "view == extensionManagerView",
          "group": "navigation"
        },
        {
          "command": "vscode-extension-manager.selectAll",
          "when": "view == extensionManagerView",
          "group": "navigation"
        },
        {
          "command": "vscode-extension-manager.deselectAll",
          "when": "view == extensionManagerView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Extension Manager",
      "properties": {
        "extensionManager.cliCommand": {
          "type": "string",
          "default": "auto",
          "description": "Command to use for installing extensions (e.g., 'code', 'cursor', or 'auto' to detect).",
          "enum": [
            "auto",
            "code",
            "cursor",
            "codium"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Ranjeet Harishchandre",
  "license": "SEE LICENSE IN LICENSE",
  "type": "module",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.60.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1",
    "vsce": "^2.15.0"
  }
}
